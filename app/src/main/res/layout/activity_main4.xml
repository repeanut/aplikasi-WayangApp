<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F7F3EE"
    tools:context=".MainActivity4">

    <TextView
        android:id="@+id/textView"
        android:layout_width="170dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="228dp"
        android:layout_marginBottom="708dp"
        android:fontFamily="@font/m_plus_1p_bold"
        android:padding="10dp"
        android:text="Sign Up"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="25dp" />

    <androidx.cardview.widget.CardView
        android:layout_width="162dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="195dp"
        android:layout_marginBottom="637dp"
        android:backgroundTint="#4B69B0"
        app:cardCornerRadius="50dp">

        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:backgroundTint="#4B69B0"
            android:fontFamily="@font/m_plus_1p_bold"
            android:padding="10dp"
            android:text="Facebook"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="20dp" />
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="162dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="25dp"
        android:layout_marginBottom="634dp"
        app:cardBackgroundColor="#37B1E1"
        android:backgroundTint="#37B1E1"
        app:cardCornerRadius="50dp">

        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:backgroundTint="#37B1E1"
            android:fontFamily="@font/m_plus_1p_bold"
            android:padding="10dp"
            android:text="Twitter"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="20dp"
            android:visibility="visible" />
    </androidx.cardview.widget.CardView>

    <TextView
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="5dp"
        android:layout_marginTop="90dp"
        android:layout_marginEnd="109dp"
        android:layout_marginBottom="570dp"
        android:fontFamily="@font/lalezar"
        android:padding="10dp"
        android:text="or log in with email"
        android:textAlignment="center"
        android:textColor="#A89F9F"
        android:textSize="20dp" />

    <EditText
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="520dp"
        android:background="@drawable/shape"
        android:fontFamily="@font/m_plus_1p_bold"
        android:hint="your name"
        android:layout_centerHorizontal="true"
        android:inputType="textCapSentences"
        android:textAlignment="center"
        android:textColorHint="#A89F9F"
        android:textColor="@color/black"
        android:textSize="20dp" />

    <EditText
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="450dp"
        android:background="@drawable/shape"
        android:fontFamily="@font/m_plus_1p_bold"
        android:hint="last name"
        android:layout_centerHorizontal="true"
        android:inputType="textCapSentences"
        android:textAlignment="center"
        android:textColorHint="#A89F9F"
        android:textColor="@color/black"
        android:textSize="20dp" />


    <EditText
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="380dp"
        android:background="@drawable/shape"
        android:fontFamily="@font/m_plus_1p_bold"
        android:hint="your email"
        android:layout_centerHorizontal="true"
        android:inputType="textCapSentences"
        android:textAlignment="center"
        android:textColorHint="#A89F9F"
        android:textColor="@color/black"
        android:textSize="20dp" />

    <EditText
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="29dp"
        android:layout_marginBottom="310dp"
        android:background="@drawable/shape"
        android:fontFamily="@font/m_plus_1p_bold"
        android:hint="password"
        android:layout_centerHorizontal="true"
        android:inputType="textCapSentences"
        android:textAlignment="center"
        android:textColorHint="#A89F9F"
        android:textColor="@color/black"
        android:textSize="20dp" />

    <TextView
        android:layout_width="332dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="5dp"
        android:layout_marginTop="90dp"
        android:layout_marginEnd="43dp"
        android:layout_marginBottom="135dp"
        android:layout_centerHorizontal="true"
        android:fontFamily="@font/lalezar"
        android:padding="10dp"
        android:text="By signing up, you agreed with our Terms of
Services and Privacy Policy."
        android:textAlignment="center"
        android:textColor="#CFCFCF"
        android:textSize="16dp" />


    <androidx.cardview.widget.CardView
        android:layout_width="355dp"
        android:layout_height="53dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginEnd="29dp"
        android:layout_marginBottom="209dp"
        android:backgroundTint="#3E3D38"
        app:cardCornerRadius="50dp">

        <Button
            android:layout_width="328dp"
            android:layout_height="87dp"
            android:layout_gravity="center"
            android:backgroundTint="#3E3D38"
            android:fontFamily="@font/m_plus_1p_bold"
            android:onClick="SignUp"
            android:padding="12dp"
            android:text="SignUp"
            android:textAllCaps="false"
            android:textColor="#FFFFFF"
            android:textSize="20dp"
            android:visibility="visible" />
    </androidx.cardview.widget.CardView>

    <TextView
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="5dp"
        android:layout_marginTop="90dp"
        android:layout_marginEnd="140dp"
        android:layout_marginBottom="45dp"
        android:fontFamily="@font/m_plus_1p_bold"
        android:padding="10dp"
        android:text="Already have  account?"
        android:textAlignment="center"
        android:textColor="#CFCFCF"
        android:textSize="15dp" />

    <TextView
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="5dp"
        android:layout_marginTop="90dp"
        android:layout_marginEnd="76dp"
        android:layout_marginBottom="45dp"
        android:fontFamily="@font/m_plus_1p_bold"
        android:onClick="Signup"
        android:padding="10dp"
        android:text="Login"
        android:textAlignment="center"
        android:textColor="#808479"
        android:textSize="15dp" />

</RelativeLayout>