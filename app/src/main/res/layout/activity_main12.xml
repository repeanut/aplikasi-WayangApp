<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F7F3EE"
    tools:context=".MainActivity12">

  <androidx.cardview.widget.CardView
      android:id="@+id/searchCardView"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginStart="16dp"
      android:layout_marginTop="16dp"
      android:layout_marginEnd="16dp"
      android:layout_marginBottom="16dp"
      app:cardCornerRadius="50dp"
      android:backgroundTint="@color/white"
      app:cardElevation="5dp">

    <EditText
        android:id="@+id/searchEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:drawableLeft="@drawable/baseline_search_24"
        android:drawablePadding="8dp"
        android:fontFamily="@font/lilita_one"
        android:hint="apa yang ingin kamu cari?"
        android:textColor="@color/black"
        android:textSize="16dp"
        android:padding="12dp"
        android:textColorHint="#A89F9F" />
  </androidx.cardview.widget.CardView>

  <TextView
      android:layout_width="159dp"
      android:layout_height="wrap_content"
      android:layout_alignParentStart="true"
      android:layout_alignParentTop="true"
      android:layout_alignParentEnd="true"
      android:layout_alignParentBottom="true"
      android:layout_marginStart="16dp"
      android:layout_marginTop="92dp"
      android:layout_marginEnd="218dp"
      android:layout_marginBottom="692dp"
      android:fontFamily="@font/lilita_one"
      android:text="Dipilih Untukmu"
      android:textColor="@color/black"
      android:textSize="20dp" />

  <ImageView
      android:layout_width="361dp"
      android:layout_height="175dp"
      android:layout_alignParentBottom="true"
      android:layout_centerHorizontal="true"
      android:layout_marginEnd="15dp"
      android:layout_marginBottom="517dp"
      android:src="@drawable/imageviewtrailer" />

  <androidx.constraintlayout.widget.ConstraintLayout
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      tools:context=".MainActivity5">

  <FrameLayout
      android:id="@+id/frameLayout"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginStart="63dp"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintRight_toRightOf="parent"
      app:layout_constraintStart_toStartOf="@+id/videoView"
      app:layout_constraintTop_toTopOf="parent">

  </FrameLayout>

    <VideoView
        android:id="@+id/videoView"
        android:layout_width="210dp"
        android:layout_height="116dp"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="30dp"
        tools:layout_editor_absoluteY="146dp" />

    <HorizontalScrollView
        android:id="@+id/horizontalScrollView"
        android:layout_width="207dp"
        android:layout_height="116dp"
        android:layout_marginEnd="-139dp"
        android:backgroundTint="#F7F3EE"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.095"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/videoView"
        app:layout_constraintVertical_bias="0.0">

    </HorizontalScrollView>

    <TextView
        android:layout_width="40dp"
        android:layout_height="13dp"
        android:fontFamily="@font/m_plus_1p_bold"
        android:text="Trailer"
        android:textColor="@color/white"
        android:textSize="10dp"
        tools:layout_editor_absoluteX="253dp"
        tools:layout_editor_absoluteY="146dp"
        tools:ignore="MissingConstraints" />

    <TextView
        android:layout_width="52dp"
        android:layout_height="11dp"
        android:fontFamily="@font/lilita_one"
        android:text="Ramayana"
        android:textColor="@color/white"
        android:textSize="10dp"
        tools:layout_editor_absoluteX="253dp"
        tools:layout_editor_absoluteY="177dp"
        tools:ignore="MissingConstraints" />

    <TextView
        android:layout_width="104dp"
        android:layout_height="41dp"
        android:fontFamily="@font/m_plus_1p_bold"
        android:text="Cerita yang menceritakan tentang cinta , pengorbanan dan kasih sayang."
        android:textColor="@color/white"
        android:textSize="7dp"
        tools:layout_editor_absoluteX="253dp"
        tools:layout_editor_absoluteY="188dp"
        tools:ignore="MissingConstraints" />

    <ImageView
        android:layout_width="11dp"
        android:layout_height="18dp"
        android:src="@drawable/titiktiga"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/frameLayout"
        app:layout_constraintHorizontal_bias="0.662"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.3" />

    <TextView
        android:layout_width="159dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:fontFamily="@font/lilita_one"
        android:text="Browse Semua"
        android:textColor="@color/black"
        android:textSize="20dp"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="299dp"
        tools:ignore="MissingConstraints" />

    <ImageButton
        android:layout_width="172dp"
        android:layout_height="121dp"
        android:backgroundTint="#F7F3EE"
        android:src="@drawable/button3"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="331dp"
        tools:ignore="MissingConstraints" />

    <ImageButton
        android:layout_width="168dp"
        android:layout_height="113dp"
        android:backgroundTint="#F7F3EE"
        android:src="@drawable/button4"
        tools:layout_editor_absoluteX="206dp"
        tools:layout_editor_absoluteY="334dp"
        tools:ignore="MissingConstraints" />

    <ImageButton
        android:layout_width="183dp"
        android:layout_height="125dp"
        android:backgroundTint="#F7F3EE"
        android:src="@drawable/button5"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="10dp"
        tools:layout_editor_absoluteY="450dp" />

    <ImageButton
        android:layout_width="201dp"
        android:layout_height="117dp"
        android:backgroundTint="#F7F3EE"
        android:src="@drawable/button6"
        tools:layout_editor_absoluteX="188dp"
        tools:layout_editor_absoluteY="452dp"
        tools:ignore="MissingConstraints" />

    <ImageButton
        android:layout_width="184dp"
        android:layout_height="121dp"
        android:backgroundTint="#F7F3EE"
        android:src="@drawable/button7"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="10dp"
        tools:layout_editor_absoluteY="575dp" />

    <ImageButton
        android:layout_width="179dp"
        android:layout_height="118dp"
        android:backgroundTint="#F7F3EE"
        android:src="@drawable/button8"
        tools:layout_editor_absoluteX="199dp"
        tools:layout_editor_absoluteY="575dp"
        tools:ignore="MissingConstraints" />

  </androidx.constraintlayout.widget.ConstraintLayout>
</RelativeLayout>